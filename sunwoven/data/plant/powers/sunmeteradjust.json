{
  "type": "origins:multiple",
  "hidden": true,
  "fill": {
    "type": "origins:action_over_time",
    "interval": 5,
    "condition": {
      "type": "origins:exposed_to_sun"
    },
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "plant:sunmeter",
      "change": 3
    }
  },
  "low_fill": {
    "type": "origins:action_over_time",
    "interval": 30,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:exposed_to_sun",
          "inverted": true
        },
        {
          "type": "brightness",
          "comparison": ">=",
          "compare_to": 0.5
        }
      ]
    },
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "plant:sunmeter",
      "change": 2
    }
  },
  "empty": {
    "type": "origins:action_over_time",
    "interval": 20,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "plant:size",
          "comparison": "==",
          "compare_to": 1
        },
        {
          "type": "origins:exposed_to_sun",
          "inverted": true
        }
      ]
    },
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "plant:sunmeter",
      "change": -5
    }
  }

}